<!DOCTYPE html>
<html>
<head>
  <title>
  <% if content_for?(:title) %>
    <%= yield(:title) %>
  <% else %>
    Ticketee
  <% end %>
</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- to display all fash messages here -->
<% flash.each do |key, value| %>
	<div class'flash' id='<%= key %>' >
		<%= value %>
	</div>
<% end %>

<%= yield %>

</body>
</html>
